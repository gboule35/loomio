%section.previous-proposals-card{aria-labelledby: 'previous-proposals-card-heading', ng-show: 'anyProposals()'}
  %h2.lmo-card-heading#previous-proposals-card-heading{translate: 'previous_proposals_card.heading'}

  .lmo-wrap{ng-repeat: 'proposal in proposals() track by proposal.id', id: 'proposal-{{proposal.id}}'}
    .active-proposal{ng-if: 'selectedProposalId == proposal.id'}
      %proposal_expanded{proposal: 'proposal', can_collapse: 'true'}

    .inactive-proposal{ng-if: 'selectedProposalId != proposal.id', ng-click: 'selectProposal(proposal)'}
      %proposal_collapsed{proposal: 'proposal'}
