%section.group-previous-proposals-card{aria-labelledby: 'group-previous-proposals-card__title'}
  %h2#group-previous-proposals-card__title.lmo-card-heading{translate: 'group_previous_proposals_card.heading'}
  %ul.group-previous-proposals-card__previous_proposals
    %li.group-previous-proposals-card__previous_proposal.media{ng-repeat: 'proposal in group.closedProposals() | limitTo: 5 track by proposal.id'}
      .media-left
        %pie_with_position{proposal: 'proposal'}
      .proposal-collapsed-body.media-body
        .proposal-collapsed-title
          {{proposal.name}}
  %a.group-previous-proposals-card__link{lmo-href-for: 'group', lmo-href-action: 'previous_proposals'}
    %span{translate: 'group_previous_proposals_card.see_more'}
